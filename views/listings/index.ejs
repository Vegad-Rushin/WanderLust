
<% layout("/layouts/boilerplate") %>

<style>
  #belowNav-options {
  display: flex;
  align-items: center;
  justify-content: space-between; /* ðŸ”¥ key */
  width: 100%;
  padding: 1rem 1.5rem 0 1rem; /* optional spacing from edges */
}

/* LEFT SIDE FILTERS */
.filter-options {
  border: 1px solid #fe424d;
  border-radius: 1rem;
  padding: 1rem 0.5rem 0 0.5rem;
  display: flex;
  gap: 2rem;
  width: 55%;              /* ðŸ‘ˆ exactly 50% */
  overflow-x: auto;
  scrollbar-width: none;
  white-space: nowrap;
}

/* individual filter */
.filter {
  text-align: center;
  opacity: 0.7;
  flex-shrink: 0;          /* prevents shrinking */
}

.filter i {
  font-size: 1.5rem;
}

.filter p {
  font-size: 0.8rem;
}

.filter:hover {
  opacity: 1;
  transform: scale(1.1);
  cursor: pointer;
  color: #fe424d;
}

/* RIGHT SIDE TOGGLE */
.tax-toggle {
  width: 20%;              /* ðŸ‘ˆ exactly 20% */
  min-width: max-content;  /* prevents squeezing */
  border: 1px solid #fe424d;
  border-radius: 1rem;
  height: 3.2rem;
  padding: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Card price */

.card-text {
  display: inline;
}


/* @media (max-width: 992px) {
  .filter-options {
    width: 65%;
  }

  .tax-toggle {
    width: auto;
  }
} */

@media (max-width: 768px) {

#belowNav-options {
  flex-wrap: wrap;              /* ðŸ”¥ allow wrapping */
  gap: 1rem;
}

.filter i {
  font-size: 1.6rem;
}

.filter p {
  font-size: 0.9rem;
}

.filter-options {
  border: 1px solid #fe424d;
  border-radius: 1rem;
  padding: 0.8rem 0.8rem 0 1.2rem ;
  display: flex;
  align-items: center;
  justify-content: flex-start;            /* ðŸ‘ˆ exactly 50% */
  gap: 3rem;
  width: 100%;                  /* ðŸ”¥ take full width */
  overflow-x: auto;
  scrollbar-width: none;
  white-space: nowrap;
}

.tax-toggle {
  display: flex;
                    /* ðŸ”¥ move to next line */
  justify-content: center;
  align-items: center;
  height: auto;
  /* padding: 0.75rem 1rem; */
}

.form-check {
  width: 100%;
  justify-content: space-between;
}
}



</style>

<body>

  <div id="belowNav-options">

    <div class="filter-options">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Room</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
  
      <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-leaf"></i></div>
        <p>Nature</p>
      </div>
    </div>


    <div class="tax-toggle">
      <div class="form-check form-switch form-check-reverse">
        <input class="form-check-input" type="checkbox" id="switchCheckReverse">
        <label class="form-check-label" for="switchCheckReverse">Display total after taxes</label>
      </div>
    </div>

  </div>

  <div class="container-fluid mt-3 px-1">

    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">

        <% for(listing of allListings) { %>
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %> - image" style="height: 18rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <h5 class="card-title"><b><%= listing.title %></b></h5>
                  <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> </p> <span>/ night</span>
                  <!-- <a href="/listings/" class="btn btn-primary">Book now</a> -->
                </div>
            </div>
          </a>
        <% } %>

    </div>

  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
    
      const modalElement = document.getElementById("loginModal");
      const shouldOpen = <%= JSON.stringify(openLoginModal) %>;
    
      if (shouldOpen && modalElement) {
          const loginModal = new bootstrap.Modal(modalElement);
          loginModal.show();
      }
    
    });
    </script>

  <script>

    let taxSwitch = document.getElementById("switchCheckReverse");

    taxSwitch.addEventListener("change", (e) => {

      let taxInfo = document.getElementsByClassName("tax-info");
      let prices = document.getElementsByClassName("card-text");


      for(let price of prices) {

        // Store base price ONCE
        if (!price.dataset.basePrice) {
          let base = parseInt(
            price.innerText.replace(/[^\d]/g, "")
          );
          price.dataset.basePrice = base;
        }

        let numPrice = Number(price.dataset.basePrice);
        let gst = Number((numPrice * 0.18));

        if(taxSwitch.checked) {
          let total = numPrice + gst;
          price.innerText = `â‚¹ ${Math.round(total).toLocaleString("en-IN")} ( â‚¹ ${numPrice.toLocaleString("en-IN")} + â‚¹ ${gst.toLocaleString("en-IN")} GST )`;
        } else {
          price.innerText = `â‚¹ ${numPrice.toLocaleString("en-IN")}`;
        }
        
      }
      
    })

  </script>

</body>


