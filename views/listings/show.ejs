
<% layout("/layouts/boilerplate") %>

<style>
    /* ================================
   SHOW PAGE LAYOUT FIXES
================================ */

/* Make rows behave properly */
.row {
  margin-left: 0;
  margin-right: 0;
}

/* ================================
   TITLE
================================ */
h3 {
  text-align: center;
  margin-bottom: 1rem;
}

/* ================================
   LISTING CARD
================================ */
.listing-card {
  margin: auto;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
}

/* Listing image */
.show-image {
  width: 100%;
  height: 420px;
  object-fit: cover;
  border-radius: 16px 16px 0 0;
}

/* Card body spacing */
.listing-card .card-body {
  padding: 1.25rem;
}

.listing-card .card-text {
  font-size: 0.95rem;
  margin-bottom: 0.6rem;
}

/* ================================
   EDIT / DELETE BUTTONS
================================ */
.btns {
  display: flex;
  gap: 1rem;
  justify-content: center;
}

.btns form {
  margin: 0;
}

/* ================================
   REVIEWS SECTION
================================ */
.starability-grow {
  margin-bottom: 1rem;
}

.row .card.col-5 {
  border-radius: 14px;
  box-shadow: 0 6px 18px rgba(0,0,0,0.1);
}

/* ================================
   MAP
================================ */
#map {
  width: 100%;
  height: 320px;
  border-radius: 16px;
  margin-top: 1rem;
}

/* ================================
   MOBILE FIXES
================================ */
@media (max-width: 768px) {

  /* Remove Bootstrap offsets on mobile */
  .offset-3,
  .offset-4 {
    margin-left: 0 !important;
  }

  /* Full width columns */
  .col-6,
  .col-8 {
    width: 100%;
    max-width: 100%;
  }

  /* Listing card full width */
  .listing-card {
    width: 100%;
  }

  /* Image becomes landscape */
  .show-image {
    height: 240px;
  }

  /* Buttons stack */
  .btns {
    flex-direction: column;
    align-items: center;
  }

  .btns .btn {
    width: 80%;
  }

  /* Reviews full width */
  .row .card.col-5 {
    width: 100%;
    margin-left: 0 !important;
  }

  /* Text spacing */
  .listing-card .card-text {
    font-size: 0.9rem;
  }
}

/* ================================
   EDIT / DELETE BUTTON FIX
================================ */

/* Button container */
.btns {
  display: flex;
  gap: 0.75rem;
  justify-content: center;
  margin-top: 1rem;
  margin-bottom: 1.5rem;
}

/* Make both buttons equal */
.btns .btn {
  min-width: 120px;
  padding: 0.5rem 1rem;
  border-radius: 10px;
  font-size: 0.95rem;
  transition: all 0.2s ease;
}

/* Edit button (primary action) */
.btns .subBtn {
  background-color: #fe424d;
  border: none;
  color: #fff;
}

.btns .subBtn:hover {
  background-color: #e63946;
  transform: translateY(-1px);
}

/* Delete button (danger but secondary) */
.btns form button {
  background-color: #212529;
  border: none;
  color: #fff;
}

.btns form button:hover {
  background-color: #000;
  transform: translateY(-1px);
}

/* Click feedback */
.btns .btn:active {
  transform: scale(0.96);
}

/* ================================
   MOBILE BEHAVIOR
================================ */
@media (max-width: 768px) {

  .btns {
    flex-direction: column;
    align-items: center;
  }

  .btns .btn {
    width: 85%;
  }
}



</style>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row mt-2">

    <div class="col-8 offset-3 ">
        <h3><%=listing.title%></h3>
    </div>

    <div class="card col-6 offset-3 listing-card">
        <img src="<%=listing.image.url%>" class="card-img-top show-image" alt="<%=listing.title%> - image">
        <div class="card-body">
            <p class="card-text"><b> Owned by : <i><%=listing.owner.username%></i> </b></p>
            <p class="card-text"><%= listing.description %> </p>
            <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> </p>
            <p class="card-text"><%= listing.location %>, <%= listing.country %> </p>
        </div>
    </div>

    <br>

    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>

    <div class="btns mb-3">

        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark subBtn col-1 offset-3">Edit</a>
    
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-4">Delete</button>
        </form>

    </div>

    <% } %>


    <div class="col-8 offset-3 mb-3">
        <hr>

        <% if(currUser) { %>

        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">

            <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-grow">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>

            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" class="form-control" id="comment" cols="30" rows="5" required></textarea> 
                <div class="invalid-feedback">Please add some comments for review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        
        <% } %>
        
        <% if(listing.reviews.length > 0) { %>
        <hr>
        <div class="row">
            <p><b>All Reviews</b></p>
            <% for(review of listing.reviews) { %>
                <div class="card col-5 ms-3 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@<%=review.author.username%></h5>
                        <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                        <p class="card-text"><%=review.comment%></p>

                        <% if(currUser && currUser._id.equals(review.author._id)) { %>

                        <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST" class="mb-2">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>

                        <% } %>

                    </div>
                </div>
            <% } %>
        </div>

        <% } %>

    </div>

    <% if(!currUser) { %>
        <div class="col-8 offset-3 mb-3">
            <hr>
            <h3>Where you'll be</h3>
            <div id="map"></div>
        </div>
    <% } else { %>

        <div>
            <hr>
            <h3>Where you'll be</h3>
            <div id="map"></div>
        </div>

    <% } %>
    

</div>

<script src="/js/map.js"></script>