
<style>
 /* ================================
   NAVBAR BASE STYLES
================================ */
.navbar,
.navbar-collapse {
  background-color: #ffffff !important;
}

.navbar {
  padding: 0.6rem 1rem;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
  z-index: 1030;
}

.navbar .container-fluid {
  align-items: center;
}

/* ================================
   BRAND
================================ */
.navbar-brand {
  font-size: 1.6rem;
  color: #fe424d;
}

.navbar-brand:hover {
  color: #fe424d;
}

/* ================================
   NAV LINKS
================================ */
.nav-link {
  font-size: 0.95rem;
  color: #222;
  /* transition: color 0.2s ease, transform 0.2s ease; */
}

/* .nav-link:hover {
  color: #fe424d;
  transform: translateX(2px);
} */

.user {
  font-weight: 700;
  text-decoration: underline;
}

.navbar-nav {
  display: flex;
  gap: 0.6rem;
}


/* ================================
   SEARCH BAR
================================ */
.nav-search {
  width: 100%;
  display: flex;
  align-items: center;
}

.search-inp {
  border-radius: 25px;
  padding: 0.5rem 1.25rem;
  border: 1px solid #ddd;
  transition: box-shadow 0.2s ease;
}

.search-inp:focus {
  box-shadow: 0 0 0 2px rgba(254, 66, 77, 0.25);
  border-color: #fe424d;
}

.search-btn {
  background-color: #fe424d;
  color: #fff;
  padding: 0.55rem 1.1rem;
  display: flex;
  align-items: center;
  justify-self: center;
  gap:0.3rem;
  border-radius: 25px;
  border: none;
  transition: all 0.25s ease;
}

.search-btn i{
  scale: 1.1; 
}

.search-btn:hover {
  background-color: #fff;
  color: #fe424d;
  border: 1px solid #fe424d;
}

.search-btn:active {
  transform: scale(0.95);
}

/* ================================
   COLLAPSE ANIMATION
================================ */
.navbar-collapse {
  transition: all 0.35s ease;
}

/* ================================
   DESKTOP LAYOUT
================================ */
@media (min-width: 769px) {
  .nav-search {
    max-width: 420px;
  }
}

/* ================================
   MOBILE STYLES
================================ */
@media (max-width: 768px) {

  .navbar {
    padding: 0.5rem 0.75rem;
  }

  .navbar-collapse {
    margin-top: 0.5rem;
    padding: 0.75rem;
    border-radius: 14px;
    box-shadow: 0 10px 28px rgba(0, 0, 0, 0.12);
  }

  .navbar-nav {
    width: 100%;
    align-items: flex-start;
  }

  .navbar-nav + .navbar-nav {
    margin-top: 0.75rem;
  }

  .navbar-nav .nav-link {
    padding: 0.4rem 0;
    font-size: 1rem;
  }

  .nav-search {
    margin-top: 0.5rem;
  }

  .search-inp {
    width: 100%;
    padding: 0.5rem 1rem;
  }

  .search-btn {
    padding: 0.5rem 1rem;
    white-space: nowrap;
  }

  .user {
    margin-top: 0.5rem;
    color: #fe424d;
  }

  .auth-box {
    width: 90%;
  }

}

/* ================================
   HAMBURGER ICON ANIMATION
================================ */
.navbar-toggler {
  border: none;
  transition: transform 0.3s ease;
}

.navbar-toggler:not(.collapsed) {
  transform: rotate(90deg);
}


</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top ms-1 me-1">
    <div class="container-fluid nav">
      <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>

        <div class="navbar-nav ms-md-auto my-2 my-md-0">

          <form class="d-flex w-100 nav-search" role="search">
            <input class="form-control me-2 search-inp" type="search" placeholder="Search destinations" />
            <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
          </form>

        </div>

        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
          <% if (!currUser) { %>
            <button class="nav-link btn p-0 border-0 bg-transparent" id="openLogin">
              <b>Log in</b>
            </button>
          
            <button class="nav-link btn p-0 border-0 bg-transparent" id="openSignup">
              <b>Sign up</b>
            </button>         
          <% }  else { %>
              <a class="nav-link user" href="/profile"><%= currUser.username.toUpperCase() %></a>
              <a class="nav-link" href="/logout"><b>Log out</b></a>
          <% } %>

        </div>
      </div>
    </div>
  </nav>

<script>

    

</script>